pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/playwright/node:lts' // Sử dụng Docker image có sẵn Playwright
        }
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', 
                url: 'git@github.com:minhduongquang/Playwright_Practice_TS.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Playwright Tests') {
            steps {
                sh 'npx playwright test' // Lệnh chạy tất cả các test
            }
        }
        stage('Publish Test Results') {
            steps {
                junit 'playwright-report/junit.xml' // Xuất kết quả test ra JUnit
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'playwright-report/**/*', fingerprint: true
            echo 'Pipeline finished.'
        }
    }
}